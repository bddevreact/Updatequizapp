# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/cryptoquiz
MONGODB_TEST_URI=mongodb://localhost:27017/cryptoquiz_test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-too
JWT_REFRESH_EXPIRE=30d

# Firebase Configuration (for integration with existing frontend)
FIREBASE_PROJECT_ID=quiz-app-81036
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_FIREBASE_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@quiz-app-81036.iam.gserviceaccount.com

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Payment Gateway (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/api/telegram/webhook
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@cryptoquiz.com
FROM_NAME=CryptoQuiz Team

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# API Configuration
API_VERSION=v1
API_PREFIX=/api
API_TIMEOUT=30000

# WebSocket Configuration
WS_PORT=5001
WS_CORS_ORIGIN=http://localhost:3000

# Admin Configuration
ADMIN_EMAIL=admin@cryptoquiz.com
ADMIN_PASSWORD=admin123
ADMIN_SECRET_KEY=admin-secret-key-change-this

# App Configuration
APP_NAME=CryptoQuiz
APP_VERSION=1.0.0
APP_URL=https://yourdomain.com
FRONTEND_URL=http://localhost:3000

# Feature Flags
ENABLE_AI_QUESTIONS=true
ENABLE_TELEGRAM_INTEGRATION=true
ENABLE_ANALYTICS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_MAINTENANCE_MODE=false

# Maintenance Mode
MAINTENANCE_MESSAGE=We are currently performing maintenance. Please try again later.
MAINTENANCE_END_TIME=2024-12-31T23:59:59.000Z

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# Monitoring Configuration
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_INTERVAL=30000
ENABLE_METRICS=true
METRICS_PORT=9090
