{
  "name": "cryptoquiz-backend",
  "version": "1.0.0",
  "description": "Comprehensive backend API for CryptoQuiz Telegram WebApp",
  "main": "src/app.js",
  "scripts": {
    "start": "NODE_ENV=production node src/app.js",
    "start:prod": "NODE_ENV=production node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "build": "echo 'No build step required for Node.js'",
    "docker:build": "docker build -t cryptoquiz-backend .",
    "docker:run": "docker run -p 5000:5000 cryptoquiz-backend",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop cryptoquiz-backend",
    "pm2:restart": "pm2 restart cryptoquiz-backend",
    "pm2:logs": "pm2 logs cryptoquiz-backend"
  },
  "keywords": [
    "crypto",
    "quiz",
    "telegram",
    "webapp",
    "api",
    "backend",
    "nodejs",
    "express",
    "mongodb",
    "jwt",
    "websocket"
  ],
  "author": "CryptoQuiz Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-fileupload": "^1.4.3",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^11.11.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mongodb": "^6.20.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "openai": "^4.20.1",
    "sharp": "^0.33.0",
    "socket.io": "^4.7.4",
    "stripe": "^14.7.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cryptoquiz/backend.git"
  },
  "bugs": {
    "url": "https://github.com/cryptoquiz/backend/issues"
  },
  "homepage": "https://github.com/cryptoquiz/backend#readme"
}
